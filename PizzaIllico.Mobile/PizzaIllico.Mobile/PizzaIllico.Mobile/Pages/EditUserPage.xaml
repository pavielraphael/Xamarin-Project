<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaIllico.Mobile.Pages.EditUserPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edition de votre profil" TextColor="Black" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,20,0,0"></Label>

            <Label Text="Nom :" Margin="20,80,0,0"/>
            <Entry Text="{Binding Nom}" Margin="10,0,10,0"/>

            <Label Text="Prénom :" Margin="20,10,0,0"/>
            <Entry Text="{Binding Prenom}" Margin="10,0,10,0"/>

            <Label Text="Téléphone :" Margin="20,10,0,0"/>
            <Entry Text="{Binding Telephone}" Margin="10,0,10,0"/>

            <Button Command="{Binding MiseAJour}" Text="Mise à jour du profil" Margin="30,20,30,0" BackgroundColor="#cfffbb" BorderColor="Black" BorderWidth="1"/>

            <Label Text="{Binding ChangeSuccess}"></Label>

            <Button Command="{Binding ChangePwd}" Text="Changer votre mot de passe"  Margin="30,0,30,0" BorderColor="Black" BorderWidth="1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>