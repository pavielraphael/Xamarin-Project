<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaIllico.Mobile.Pages.EditPwdPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edition de votre profil" TextColor="Black" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,20,0,0"></Label>

            <Label Text="Ancien mot de passe :" Margin="20,80,0,0"/>
            <Entry Text="{Binding OldPassword}" Margin="10,0,10,0"/>

            <Label Text="Nouveau mot de passe :" Margin="20,10,0,0"/>
            <Entry Text="{Binding NewPassword}" Margin="10,0,10,0"/>

            <Button Command="{Binding MiseAJour}" Text="Mise à jour du profil" Margin="30,20,30,0" BackgroundColor="#cfffbb" BorderColor="Black" BorderWidth="1"/>

            <Label Text="{Binding ChangeSuccess}"></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>